<%= Gon::Base.render_data %>

<h1><%= t('views.index.list_events') %></h1>

<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.event.name') %></th>
      <th><%= t('activerecord.attributes.event.starts_at') %></th>
      <th><%= t('activerecord.attributes.event.ends_at') %></th>
      <th colspan="3"><%= t('views.index.available_actions') %></th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.starts_at %></td>
        <td><%= event.ends_at %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, event_path(I18n.locale, event) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_event_path(I18n.locale, event) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, event_path(I18n.locale, event), method: :delete, data: {confirm: t('messages.confirm_delete')} %></td>

      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<a href="<%= new_event_path(I18n.locale) %>">
  <span class="glyphicon glyphicon-plus"></span>
  <%= t("views.index.links.new_event") %>
</a>


