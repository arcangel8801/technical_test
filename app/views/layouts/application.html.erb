<!DOCTYPE html>
<html>
  <head>
    <title>TechnicalTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="select-translate">
    <span class="language <%= 'active' if I18n.locale == :es %>"><%= link_to 'ES', { locale: :es } %></span>|
    <span class="language <%= 'active' if I18n.locale == :en %>"><%= link_to 'EN', { locale: :en } %></span>
  </div>
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
