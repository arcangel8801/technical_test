<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Week day</th>
      <th>Current date</th>
      <th>Hour</th>
      <th>Minute</th>
      <th>Coupons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.event %></td>
        <td><%= schedule.week_day %></td>
        <td><%= schedule.current_date %></td>
        <td><%= schedule.hour %></td>
        <td><%= schedule.minute %></td>
        <td><%= schedule.coupons %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

